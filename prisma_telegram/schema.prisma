generator client {
    provider = "prisma-client-js"
    output   = "../node_modules/@telegram/prisma/client"
}

datasource db {
    provider = "postgresql"
    url      = env("DATABASE_TELEGRAM_URL")
}

model Channels {
    id       Int     @id
    username String?
    title    String?

    @@map("channels")
}

model Messages {
    id        Int      @id
    channelId Int      @map("channel_id")
    date      DateTime
    text      String?
    mediaFile String?  @map("media_file")
    mediaType String?  @map("media_type")
    GroupedId Int?     @map("grouped_id")

    @@map("messages")
}
